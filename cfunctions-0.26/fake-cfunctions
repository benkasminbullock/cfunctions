#!/bin/sh

# This is a fake version of Cfunctions.

# Copyright (C) 1998 Ben K. Bullock.

# This script is free software; Ben K. Bullock gives unlimited
# permission to copy, modify and distribute it.
  
# This script is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.

version="0.1"

# Cfunctions is a program for generating header files from C files.
# If you want to get the original of Cfunctions, go to
# <http://www.hayamasa.demon.co.uk/cfunctions/index.html>.

# This program is for distribution with packages which use Cfunctions
# to build.  All this does is `touch' the files which would be
# generated by Cfunctions under usual circumstances.  This is so that
# users do not need to download Cfunctions in order to do builds or
# minor modifications.

echo "This is fake-cfunctions version $version."
echo "This script will update header file (*.h) modification times."
echo "If this script fails, please get the real Cfunctions from "
echo "<http://www.hayamasa.demon.co.uk/cfunctions/index.html>."

while test $# -ne 0
do
    case "$1" in

    -g | --global | -l | --local)
        # touch the global .h file
        touch "$2.h"
        shift
        ;;

    --individual | -i)
    # Fake Cfunctions just assumes this anyway and touches all the files
    # which are named on the command line.
        ;;

    *.c)
        h_name=`echo "$1"|sed 's/\.c$/\.h/'`
        touch $h_name
        ;;

    --version | -v)
        exit
        ;;

    # Other Cfunctions command line options which can be ignored.

    # Options taking an argument.

    --advert | -a | --debug | -D | --global-macro | -G | --local-macro | \
    -L | --output | -o | --proto-macro | -p | --cpp-arg | -P | --suffix | \
    -S | --version-control | -V | --wrap | -w | --warn | -W)
        echo "ignoring option $1 $2"
        shift
        ;;

    # Options not taking an argument.

    --backup | -b | --copy-c-ex | -c | --cpp | -C | --etags | -e | \
      --extensions | -x | --include-c-ex | -I | \
      --help | -h | --keep | -k | --line-numbers | -n | --static | -s \
      | --tags | -t | --write-comments | -m)
        echo "ignoring option $1"
        ;;

    esac
    shift
done


# Local variables:
# mode: shell
